## Here comes the pain...

escape ^aa
bind ^a other
bind s split
bind S xoff
bind o only
bind q only
bind Q xon
bind x remove
bind X lockscreen
bind r source "${HOME}/.screenrc"
bind R wrap
bind m mousetrack on
bind M mousetrack off

## Easier scrolling
#bindkey "^[[5~" eval 'copy' 'stuff ^b'  # PgUp | Enter copy/scrollback mode and page up
#bindkey "^[[6~" eval 'copy' 'stuff ^f'  # PgDown | Enter copy/scrollback mode and page down
#bindkey "[M`z," eval 'copy' 'stuff ^b'
#bindkey "[Mau+" eval 'copy' 'stuff ^f'

defscrollback 50000
defmousetrack on

## Kill startup message
startup_message off
sorendition "-b dw"
layout save default
#termcapinfo xterm* ti@:te@:LP:hs@
termcapinfo xterm|xterms|xterm*|xs ti@:te=\E[2J:LP:hs@

## Default windows
screen -t root 0 sudo su -
screen 1 zsh
screen 2 zsh
#screen 2 bash
#screen -t MComander 3 mc
#screen -t vimTerm 4 bash
#screen -t terminal 5 bash
#screen -t dropbox 6 bash

backtick 1 5 5 "$HOME/bin/meminfo.sh"
#backtick 2 5 5 "sed 's/#\[fg=\([a-z]*\)[^\[]*\]/\1/g; s/default/\\033[37m/g; s/red/\\033[31m/g; s/yellow/\\033[33m/g; s/blue/\\033[35m/g; s/cyan/\\033[36m/; s/|.*$//; s/green/\\033[32m/g ' <(rainbarf)"
#backtick 2 5 5 "rainbarf | sed 's/#\[fg=\([a-z]*\)[^\[]*\]/\1/g; s/|.*$//; s/[a-z]*//g)'"
backtick 2 5 5 "$HOME/bin/rainbarf.sh"
backtick 3 5 5 "whoami"

