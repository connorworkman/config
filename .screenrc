## Here comes the pain...
escape ^aa
bind ^a other
bind s split
bind S xoff
bind o only
bind q only
bind Q xon
bind x remove
bind X lockscreen
bind r source "${HOME}/.screenrc"
bind R wrap
bind m mousetrack on
bind M mousetrack off
bind N number +1
bind P number -1

backtick 1 5 5 "$HOME/bin/meminfo.sh"
backtick 2 5 5 "$HOME/bin/rainbarf.sh"
backtick 3 5 5 "whoami"
backtick 4 5 5 true

## Kill startup message
startup_message off
sorendition "-b dw"
vbell off
autodetach on
altscreen on
defencoding utf8
cjkwidth off
msgwait 2
defautonuke off
defflow off
defscrollback 50000
defmousetrack off
defbce off

layout autosave on
#layout new
#term screen-256color
term xterm-256color
windowlist string "%4n %h%=%f"
termcapinfo rxvt* hs:ts=\E]2;:fs=\007:ds=\E]2;\007
termcapinfo xterm* ti@:te@:LP:hs@
#termcapinfo xterm*|xs ti@:te=\E[2J:LP:hs@

hardstatus on
hardstatus alwayslastline
caption always
hardstatus string '%{= kG}[%{-b kg} %{R}%3`%{+b kk}@%{-b kc}%H%{-b kg} ][ %{-b ky}Load%{+b kk}: %{-b ky}%l %{g}]%=[ %{-b kM}%1` %{g}][%{B} %Y-%m-%d %{R}%D %{W}%0C:%s%a %{g}]'
caption string '%?%E%{=s}%?%{=b kw}%?%E%{+s}%?:%{-b kw}:%{+b kk}[%{-b kg} screen.%S %{+b kk}]%{= kw}%=%?%-Lw%?%{= kR}%n*%f %t%?%{= kR}(%u)%?%{= kw}%?%+Lw%?%= %?%E%{=s}%?%{+b kk}[%{-b kg} %h %{+b kk}]%{-b kw}:%{+b kw}:'

